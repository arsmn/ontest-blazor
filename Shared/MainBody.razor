<MudThemeProvider Theme="_currentTheme" />
<MudAppBar Elevation="25">
    <img src="./image/on-test.png" width="40" height="40" />
    <MudText Typo="Typo.h6" Class="ml-4">OnTest</MudText>
    <MudToolBar DisableGutters="true">
        <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@((e) => ToggleDrawer())"
            Class="ml-3" />
    </MudToolBar>
    <MudSpacer />
    <MudTooltip Text="Theme">
        <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit"
            OnClick="@((e) => ToggleTheme())" />
    </MudTooltip>
    <MudMenu Icon="@Icons.Material.Filled.AddCircle" Color="Color.Inherit" Dense="true">
        <MudMenuItem Link="/exam/new">New Exam</MudMenuItem>
    </MudMenu>
    <UserCard Mode="@UserCardMode.Menu" Class="mt-1 ml-4" />
</MudAppBar>
<MudDrawer @bind-Open="_drawerOpen" Elevation="25" ClipMode="DrawerClipMode.Always">
    <NavMenu />
</MudDrawer>
<MudMainContent>
    <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
        @ChildContent
    </MudContainer>
</MudMainContent>