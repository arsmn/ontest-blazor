@inherits LayoutComponentBase

<MudRTLProvider>
    <MudThemeProvider Theme="Theme.Default" />
    <MudDialogProvider />
    <MudSnackbarProvider />
    <AuthorizeView>
        <NotAuthorized>
            <MudAppBar Elevation="4" Color="Color.Primary">
                <MudSpacer />
            </MudAppBar>

            <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
                    @Body
            </MudContainer>
        </NotAuthorized>
        <Authorized>
            <MudLayout>
                <MainBody>
                    @Body
                </MainBody>
            </MudLayout>
        </Authorized>
    </AuthorizeView>
</MudRTLProvider>