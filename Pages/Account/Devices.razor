<MudGrid Class="d-flex justify-center">
    @if (_model?.Current is not null)
    {
        <MudItem xs="12" md="8">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@_model.Current.ClientInfo</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <img src="@_model.Current?.Properties?.IPLocation?.CountryFlag" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">@_model.Current.IssuedAt</MudText>
                    <MudText Typo="Typo.body2">@_model.Current.OSInfo</MudText>
                    <MudText Typo="Typo.body2">@_model.Current.IPInfo</MudText>
                </MudCardContent>
                <MudCardActions Class="d-flex justify-center">
                    @* <MudChip Variant="Variant.Outlined" Color="Color.Primary">Online</MudChip> *@
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" Color="Color.Secondary" FullWidth="true">
                        Terminate all other
                        sessions
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
    </MudGrid>
    <MudDivider />
    <MudGrid Class="d-flex justify-center">
        @foreach (var session in _model?.Others)
    {
        <MudItem xs="12" md="8">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@session.ClientInfo</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <img src="@_model.Current?.Properties?.IPLocation?.CountryFlag" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">@session.IssuedAt</MudText>
                    <MudText Typo="Typo.body2">@session.OSInfo</MudText>
                    <MudText Typo="Typo.body2">@session.IPInfo</MudText>
                </MudCardContent>
                <MudCardActions Class="d-flex justify-center">
                    @* <MudChip Variant="Variant.Outlined" Color="Color.Primary">Online</MudChip> *@
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" Color="Color.Secondary" FullWidth="true">
                        Terminate
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
    </MudGrid>