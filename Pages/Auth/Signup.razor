@page "/signup"
@layout MainLayout
@attribute [AllowAnonymous]

<EditForm Model="@_model" OnValidSubmit="SubmitAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudGrid>
        <MudItem s="12">
            <div class="d-flex justify-center">
                @* <MudIcon Icon="@CustomIcons.BlazorHero" Color="Color.Primary" Size="Size.Large" ViewBox="0 0 500 500" Style="width: 100px; height: 100px;" /> *@
            </div>
        </MudItem>
        <MudItem xs="12">
            <div class="d-flex justify-center">
                <MudText Typo="Typo.h4">Signup</MudText>
            </div>
        </MudItem>
        <MudItem  xs="12">
            <div class="d-flex justify-center">
                <MudText>Already have an account? <MudLink Href="/signin">Sign In</MudLink></MudText>
            </div>
        </MudItem>
        <MudItem xs="12" sm="6" md="6">
            <MudTextField For="@(() => _model.FirstName)" @bind-Value="_model.FirstName" Label="First Name" />
        </MudItem>
        <MudItem xs="12" sm="6" md="6">
            <MudTextField For="@(() => _model.LastName)" @bind-Value="_model.LastName" Label="Last Name" />
        </MudItem>
        <MudItem xs="12" sm="12" md="12">
            <MudTextField T="string" For="@(() => _model.Email)" @bind-Value="_model.Email" Label="E-mail" />
        </MudItem>
        <MudItem xs="12" sm="6" md="6">
            <MudTextField For="@(() => _model.Password)" InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" @bind-Value="_model.Password" Label="Password" />
        </MudItem>
        <MudItem xs="12" sm="6" md="6">
            <MudTextField For="@(() => _model.ConfirmPassword)" InputType="InputType.Password" @bind-Value="_model.ConfirmPassword" Label="Confirm Password" />
        </MudItem>
        <MudItem xs="12" Class="d-flex justify-center">
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Disabled="@(!Validated)" Color="Color.Primary" Size="Size.Large" Style="width: 100%;">Signup</MudButton>
        </MudItem>
    </MudGrid>
</EditForm>